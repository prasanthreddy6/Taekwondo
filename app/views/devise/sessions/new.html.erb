
<div class="col-md-3"> </div>
<div class="col-md-6" style="margin-top: 170px;background-color: #F1F7FA">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div style="padding-left:60px;">
  <h3>Log in below to checkout with an existing account</h3><br><br>

  <p class="field">
    <%= f.label :email%><br><br>
    <%= f.email_field :email, autofocus: true , :class => 'boxSize'%><br><br>
  </p>
  <p class="field">
    <%= f.label :password %><br><br>
    <%= f.password_field :password, autocomplete: "off", :class => 'boxSize'%><br><br>
  </p>

  <% if devise_mapping.rememberable? -%>
    <p class="field">
      <%= f.check_box :remember_me %>
       &nbsp<%= f.label :remember_me %>
    </p>
  <% end -%>

  <p class="actions">
    <%= f.submit "Log in", :class => 'btn btn-primary-ln' %>
 <% end %>
 </p>
 <%= render "devise/shared/links" %>
</div>

</div>

<div class="col-md-3" ></div>