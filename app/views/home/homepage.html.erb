<div style="padding-top:10px">
    <h1>Recent Championships</h1>
    <% @championship.all.order("created_at DESC").limit(5).each do |d| %>
      <%= link_to ( image_tag d.pic.url(:square) ), {:controller => 'championships' , :action => 'show', :id => d.id} %>
    <%end%>
</div>

<div style="padding-top:10px">
    <h1>Recent Gold Medalist</h1>
    <% @champ.all.order("created_at DESC").limit(5).each do |d| %>
      <%= link_to ( image_tag d.user.profile.avatar.url(:square) ), {:controller => 'championships' , :action => 'show', :id => d.id} %>
    <%end%>
   
