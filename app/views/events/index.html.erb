<p id="notice"><%= notice %></p>
<br><br>
<h1>Listing Events</h1>
<div class="table-responsive" style="padding-top: 20px">
<table class="table table-hover" style="font-size:18px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Location</th>
      <th>Event_date</th>
      <th>Team_manager</th>
      <th>Team_coach</th>
      <th>Team_officials</th>
      <th>Team_positions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.type %></td>
        <td><%= event.location %></td>
        <td><%= event.event_date %></td>
        <td>
        <% event.team_manager.each do |x| %>
        <%= x %>
        <% end %>
        </td>
        <td>
        <% event.team_coach.each do |x| %>
        <%= x %>
        <% end %>
        </td>
        <td>
        <% event.team_officials.each do |x| %>
        <%= x %>
        <% end %>
        </td>
        <td><%= event.team_positions %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div style="padding-left: 20px">
<%= link_to 'New Event', new_event_path %> | <%= link_to 'back to dashboard', adminprofile_profile_path %>
</div>